#include <iostream>
using namespace std;

int vector[1001];


int main() 
{
    int nrElemente;
    cin>>nrElemente;
    for(int i=0;i<nrElemente;i++)
    {
        cin>>vector[i];
    }

    int deCautat;
    cin >> deCautat;
    int l = 0, r = 8, ok = 0;

    while ((l <= r) && (ok == 0)) 
    {
        int m = (l + r) / 2;
        if (deCautat > vector[m]) 
        {
            l = m + 1;
        } 
        else if (deCautat < vector[m]) 
        {
            r = m - 1;
        } else 
        {
            cout<<"--->I found the value "<<deCautat<<"at "<<i<<" index.";
            ok = 1;
        }
    }

    if (ok == 0) 
    {
        cout<<"--->The value "<<deCautat<<" was not found in the vector.";
    }

    return 0;
}

