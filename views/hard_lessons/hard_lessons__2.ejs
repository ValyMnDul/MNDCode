    for(int i=0;i<nrElemente;i++)
    {
        cin>>vector[i];
    }

    int deCautat;
    cin>>deCautat;
    int status = 0;//0-NO  1-YES

    for(int i=0;(i<nrElemente) && (status==0);i++)
    {
        if(vector[i]==deCautat)
        {
            cout<<"--->I found the value "<<deCautat<<"at "<<i<<" index.";
            status=1;
        }
    }

    if(status==0)
