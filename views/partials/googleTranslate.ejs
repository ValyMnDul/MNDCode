<style>
    #languageDropdown
    {
        border:3px solid hsl(247, 78%, 25%);
        border-radius: 10px;
        position: relative;
        outline: none;
    }
    
    #languageDropdown select 
    {
        position: absolute;
        border:3px solid hsl(247, 78%, 25%);
        top:-18px;
        left: -2px;
        padding: 8px;
        border-radius: 7px;
        font-size: 16px;
        color: hsl(247, 78%, 25%);
        font-weight: 600;
        outline: none;
    }

</style>

<i class="fa-solid fa-language weatherIco" id="translateBtn"></i>

<div id="languageDropdown" style="display: none;">
    <select onchange="translatePage(this.value)">
        <option value="">Select language </option>
        <option value="ro">Română</option>
        <option value="en">English</option>
        <option value="fr">Français</option>
        <option value="de">Deutsch</option>
        <option value="it">Italiano</option>
        <option value="es">Español</option>
    </select>
</div>


<script>
    // Inițializează Google Translate (fără să afișeze nimic)
    function googleTranslateElementInit() {
        new google.translate.TranslateElement(
        { pageLanguage: 'ro' },
        'google_translate_element'
        );
    }

    // Activează traducerea prin setarea cookie-ului
    function translatePage(lang) {
        if (!lang) return;
        document.cookie = `googtrans=/ro/${lang}; path=/`;
        location.reload();
    }

    // Afișează dropdown-ul când se apasă butonul
    document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("translateBtn");
        const dropdown = document.getElementById("languageDropdown");

        btn.addEventListener("click", () => {
        dropdown.style.display = dropdown.style.display === "none" ? "block" : "none";
        });
    });
</script>
<script src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>